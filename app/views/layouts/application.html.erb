<!DOCTYPE html>
<html>
  <head>
    <title>Idea</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <header>
      <div class="container">
        <div class="row">
          <div class="col-12">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
              <% if user_signed_in? %>
                <%= link_to "Idea&Ability", user_path(current_user), class: "navbar-brand" %>
              <% else %>
                <%= link_to "Idea&Ability", new_user_session_path, class: "navbar-brand" %>
              <% end %>
              <div class="nav navbse-nav mr-auto"></div>
              <% if user_signed_in? %>
                <%= search_form_for @q do |f| %>
                  <div class="collapse navbar-collapse justify-content-center">
                    <div class="nav navbar-nav">
                      <form class="form-inline my-2 my-lg-0">
                        <%= f.search_field :title_or_text_cont, class: "form-control mr-sm-2" %>
                        <%= f.submit "Search", class: "btn btn-outline-success my-2 my-sm-0" %>
                      </form>
                    </div>
                  </div>
                <% end %>
                <button class="btn border border-0">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, data: {confirm: "本当にログアウトしますか？"}, class: "text-dark text-decoration-none" %>
                </button>
              <% end %>
            </nav>
          </div>
        </div>
      </div>
    </header>
    <main>
      <div class="container">
        <div class="row">
          <div class="col-12">
            <% if notice.present? %>
            <div class="alert alert-dismissable alert-success">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <p><%= notice %></p>
            </div>
          <% end %>
          <% if alert.present? %>
            <div class="alert alert-dismissable alert-danger">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <p><%= alert %></p>
            </div>
          <% end %>
          </div>
          <%= yield %>
        </div>
      </div>
    </main>
    <footer>
    </footer>
  </body>
</html>
