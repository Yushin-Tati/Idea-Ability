<div class="col-12">
  <h2>管理者ログイン</h2>
  <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
    <form>
      <div class="form-group row">
        <label class="col-sm-3 col-lg-2 col-form-label">Eメール</label>
        <div class="col-sm-9 col-lg-10">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-3 col-lg-2 col-form-label">パスワード</label>
        <div class="col-sm-9 col-lg-10">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          <div class="custom-control custom-checkbox">
            <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me, class: "custom-control-input" %>
              <label class="custom-control-label">ログインを記憶する</label>
            <% end %>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-9 col-lg-10 offset-sm-3 offset-lg-2">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-9 col-lg-10 offset-sm-3 offset-lg-2">
          <%= link_to "ユーザーログインページはこちら", user_session_path %>
        </div>
      </div>
    </form>
  <% end %>
  <%= render "admins/shared/links" %>
</div>