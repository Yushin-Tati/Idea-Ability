<div class="col-12">
  <h2>アカウント編集</h2>
    <%= form_with model: @user, local: true do |f| %>
    <form>
      <div class="form-group row">
        <label class="col-sm-3 col-lg-2 col-form-label">画像</label>
        <div class="col-sm-9 col-lg-10">
          <%= attachment_image_tag @user, :image, :fill, 210, 210, fallback: "no_image.jpg", class: "rounded-circle d-block img-fluid w-25" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-9 col-lg-10 offset-sm-3 offset-lg-2">
          <%= f.attachment_field :image %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-3 col-lg-2 col-form-label">アカウント名<span>※</span></label>
        <div class="col-sm-9 col-lg-10">
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-3 col-lg-2 col-form-label">自己紹介<span>※</span></label>
        <div class="col-sm-9 col-lg-10">
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-9 col-lg-10 offset-sm-3 offset-lg-2">
          <%= f.submit "保存", class: "btn btn-primary" %> <span>※は必須項目です</span>
        </div>
      </div>
    </form>
  <% end %>
</div>

