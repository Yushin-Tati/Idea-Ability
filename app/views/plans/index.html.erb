<h1>Plans#index</h1>
<% @plans.each do |plan| %>
  <div>
    <%= link_to plan_path(plan) do %>
      <%= plan.title %>
    <% end %>
    <%= plan.text %>
    <%= plan.status %>
    <%= link_to "コメント", comments_path(target_type: "Plan", target_id: plan.id) %>
  </div>
<% end %>

