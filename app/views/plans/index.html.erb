<%= render 'layouts/sidemenu' %>
<div class="col-9">
  <%= search_form_for @q do |f| %>
    <form class="form-inline">
      <%= f.search_field :title_or_text_cont, class: "form-control mr-1" %>
      <%= f.submit "Search", class: "btn btn-success my-2 my-sm-0" %>
    </form>
  <% end %>
  <% if @q_plans %>
    <% @q_plans.each do |plan| %>
      <div class="card", style="margin-bottom: 10px;">
        <div class="card-header bg bg-white">
          <%= link_to plan.user.name, user_path(plan.user_id) %><span>さんのアイデア</span>
        </div>
        <div class="card-body">
          <h5 class="card-title">
            <%= plan.title %>
            <span><%= link_to "詳細", plan_path(plan), class: "btn btn-primary float-right" %></span>
          </h5>
          <%= attachment_image_tag plan, :image, class: "card-img" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <% @plans.each do |plan| %>
      <div class="card", style="margin-bottom: 10px;">
        <div class="card-header bg bg-white">
          <%= link_to plan.user.name, user_path(plan.user_id) %><span>さんのアイデア</span>
        </div>
        <div class="card-body">
          <h5 class="card-title">
            <%= plan.title %>
            <span><%= link_to "詳細", plan_path(plan), class: "btn btn-primary float-right" %></span>
          </h5>
          <%= attachment_image_tag plan, :image, class: "card-img" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

