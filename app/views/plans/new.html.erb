<h1>Plans#new</h1>
<div class="notice"><%= flash[:danger] %></div>
<% if @plan.errors.any? %>
  <ui>
    <% @plan.errors.full_messages.each do |message| %>
      <li class="text-danger"><%= message %></li>
    <% end %>
  </ui>
<% end %>

<%= form_with model: @plan, local: true do |f| %>
  <div class = "field">
    <%= f.label :title %>
    <%= f.text_field :title %><span>※</span>
  </div>

  <div class = "field">
    <%= f.label :text %>
    <%= f.text_area :text %><span>※</span>
  </div>
  
  <div class="field">
    <%= f.label :image %>
    <%= f.attachment_field :image %>
  </div>

  <div class = "action">
    <%= f.submit "Ideaを投稿" %>
    <p>※は必須項目です</p>
  </div>
<% end %>

