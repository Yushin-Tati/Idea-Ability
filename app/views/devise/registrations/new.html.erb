<div class="col-12">
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2>アカウント作成</h2>
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <form>
      <div class="form-group row">
        <label class="col-sm-3 col-lg-2 col-form-label">アカウント名</label>
        <div class="col-sm-9 col-lg-10">
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-3 col-lg-2 col-form-label">電話番号</label>
        <div class="col-sm-9 col-lg-10">
          <%= f.text_field :telephone_number, maxlength: 11, class: "form-control" %>
          <span>(ハイフンなしで入力、11桁の番号)</span>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-3 col-lg-2 col-form-label">Eメール</label>
        <div class="col-sm-9 col-lg-10">
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-3 col-lg-2 col-form-label">パスワード</label>
        <div class="col-sm-9 col-lg-10">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>
            (<%= @minimum_password_length %>文字以上)
          <% end %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-3 col-lg-2 col-form-label">パスワード再入力</label>
        <div class="col-sm-9 col-lg-10">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-9 col-lg-10 offset-sm-3 offset-lg-2">
          <%= f.submit "アカウント登録", class: "btn btn-primary" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-9 col-lg-10 offset-sm-3 offset-lg-2">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </form>
  <% end %>
</div>


